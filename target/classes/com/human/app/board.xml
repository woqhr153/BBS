<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.human.app.Board">
	<select id="getBoardView" resultType="com.human.app.Boardinfo">
		select * from bbs where bbs_id = #{param1}
	</select>
	<insert id="doWrite">
		insert into bbs(bbs_id,title,content,writer,created,updated) values(seq_bbs_id.nextval,#{param1},#{param2},#{param3},to_char(sysdate,'YYYY-MM-DD'),to_char(sysdate,'YYYY-MM-DD'))
	</insert>
	<update id="doUpdate">
		update bbs set title=#{param2} , content=#{param3} where bbs_id=#{param1}
	</update>
	<delete id="doDelete">
		delete bbs where bbs_id=#{param1}
	</delete>
	<!-- 총 게시글 갯수 출력 -->
<select id="countBoard" resultType="int">
	SELECT COUNT(*) FROM BBS <include refid="sqlWhere" />
</select>

<!-- 페이징 처리 후 게시글 조회 -->
<select id="selectBoard" resultType="com.human.app.Boardinfo">
	SELECT * 
		FROM (
			SELECT ROWNUM RN, A.* 
				FROM (
						SELECT * 
						FROM BBS
						<include refid="sqlWhere" />
						ORDER BY BBS_ID DESC
						) A
				)
	WHERE RN BETWEEN #{start} AND #{end}
</select>

 <sql id="sqlWhere">
	
	<if test="search_type != '' and search_type != null">
     	where
    	 <if test="search_type == 'all'.toString()">
		    title LIKE '%'||#{search_keyword}||'%'
		    OR content LIKE '%'||#{search_keyword}||'%'
	     </if>
	     <if test="search_type == 'title'.toString()">
	     	title LIKE '%'||#{search_keyword}||'%'
	     </if>
	     <if test="search_type == 'content'.toString()">
	     	content LIKE '%'||#{search_keyword}||'%'
	     </if>
	     <if test="search_type == 'writer'.toString()">
	     	writer LIKE '%'||#{search_keyword}||'%'
	     </if>
	     
    </if>
</sql>
</mapper>